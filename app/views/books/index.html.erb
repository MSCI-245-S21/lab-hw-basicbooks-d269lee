<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan=3></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><%= link_to book.title, book_path(book) %></td>
         <td><%= form_with model: book, local: true, method: 'delete' do |f| %>
                 <%= f.submit "Delete" %>     
             <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
